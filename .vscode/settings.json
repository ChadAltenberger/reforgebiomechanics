{
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#000000", // Top window bar
        "titleBar.inactiveBackground": "#00000099", // Top window bar inactive (add '99' to end of hex)
        "titleBar.activeForeground": "#ffffff", // Top window bar - text
        "activityBarBadge.background": "#000000", // Side bar - badge icon background
        "activityBarBadge.foreground": "#ffffff", // Side bar - badge text
        "activityBar.activeBorder": "#000000" // Side bar - active indicator border
    },
    "folder-color.pathColors": [
        {
            "folderPath": "package-lock.json/",
            "color": "foldercolorizer.olive"
        },
        {
            "folderPath": "package.json/",
            "color": "foldercolorizer.olive"
        },
        {
            "folderPath": ".gitignore/",
            "color": "foldercolorizer.OrangeRed"
        },
        {
            "folderPath": "src/assets/js/",
            "color": "foldercolorizer.Gold"
        },
        {
            "folderPath": "src/assets/partials/",
            "color": "foldercolorizer.LightBlue"
        },
        {
            "folderPath": "src/assets/scss/",
            "color": "foldercolorizer.LightPink"
        }
    ]
}